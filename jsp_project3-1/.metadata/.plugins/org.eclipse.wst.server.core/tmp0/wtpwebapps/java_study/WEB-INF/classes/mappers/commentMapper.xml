<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CommentMapper">
<insert id="post" parameterType="cvo">
insert into comment(bno, writer, content)
values(#{bno}, #{writer}, #{content})
</insert>
<select id="list" parameterType="int" resultType="cvo">
select * from comment where bno = #{bno}
</select>
<delete id="remove" parameterType="int">
delete from comment where cno = #{cno} 
</delete>
<update id="modify" parameterType="cvo">
update comment set content = #{content} where cno = #{cno} and writer = #{writer}
</update>
</mapper>