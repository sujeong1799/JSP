<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CommentMapper">
<insert id="post" parameterType="cvo">
insert into comment(bNum, cWriter, cContent)
values(#{bNum}, #{cWriter}, #{cContent})
</insert>
<select id="list" parameterType="int" resultType="cvo">
select * from comment where bNum = #{bNum}
</select>
<delete id="remove" parameterType="int">
delete from comment where cNum = #{cNum} 
</delete>
<update id="modify" parameterType="cvo">
update comment set cContent = #{cContent} where cNum = #{cNum} and cWriter = #{cWriter}
</update>
</mapper>